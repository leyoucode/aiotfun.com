  <HeroSection />
  <DiscoveryStream />

  <!-- 每周雷达 + AI 圆桌 并排 -->
  <section class="mx-auto max-w-content px-4 py-8 md:px-6">
    <div class="grid gap-6 md:grid-cols-2">
      <WeeklyRadar />
      <AIRoundtable />
    </div>
  </section>

  <Newsletter />
</BaseLayout>
